---
import { features } from './data';

import FeatureItem from './feature-item.astro';
---

<dl class="grid max-w-xl gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
  {
    features.map(({ title, description, Icon }) => (
      <FeatureItem title={title} description={description}>
        <Icon slot="icon" class="size-6" aria-hidden="true" />
      </FeatureItem>
    ))
  }
</dl>
