---
import Head from '@/components/astro/head.astro';

import Footer from '@/components/astro/footer/index.astro';
import Header from '@/components/react/navbar/header';

import '../styles/global.css';

import type { HeadProps } from '@/components/astro/head.astro';

const { title, description } = Astro.props as HeadProps;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <Head title={title} description={description} />
  </head>
  <body class="grid min-h-dvh grid-rows-[1fr_auto]">
    <Header client:idle />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
